<%- include('../includes/header', { title: locals.page.title, sitename: locals.siteconfig.sitename}); %>

<div class="sector">
	<div class="container">
		<h3 class="topic"><%- locals.article.topic %></h3>
		<h1 class="headline"><%- locals.article.title %></h1>
	</div>
</div>

<div class="sector">
	<div class="container article-description">
		<%- locals.article.description %>
	</div>
</div>

<div class="sector">
	<div class="container">
		<%- locals.article.content %>
	</div>
</div>

<% if(locals.latest_articles_show === true) { %>
	<div class="sector">
		<div class="container">
			<%- locals.latest_articles %>
		</div>
	</div>
<% } %>


<% if(locals.page.verbose > 3) { %>
	<div class="sector">
		<div class="container" style="background-color:papayawhip;">
			<h3>Debug</h3>
			Channelid = <%- locals.article.channel %>
			<br>
			<pre style="background-color:lightpink;">
				<%- JSON.stringify(locals, null, 4) %>	
			</pre>
		</div>
	</div>
<% } %>

<%- include('../includes/footer'); %>
